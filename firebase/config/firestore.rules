rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check authentication
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can only read/write their own profile
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Private creations collection
    match /creations/{creationId} {
      // Users can only read their own creations
      allow read: if isSignedIn() && isOwner(resource.data.userId);

      // Users can create creations with their own userId
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Users can update/delete their own creations
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Deletion tombstones collection
    match /deleted_creations/{creationId} {
      // Users can only read their own deletion records
      allow read: if isSignedIn() && isOwner(resource.data.userId);

      // Users can only create deletion records for their own creations
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);

      // Tombstones are immutable (no updates or deletes by clients)
      allow update, delete: if false;
    }

    // Public creations collection (full data)
    match /publicCreations/{creationId} {
      // Anyone can read (including unauthenticated)
      allow read: if true;

      // Only the author can write/update/delete
      allow create: if isSignedIn() &&
                       isOwner(request.resource.data.authorId);
      allow update, delete: if isSignedIn() &&
                               isOwner(resource.data.authorId);
    }

    // Public creation index (lightweight)
    match /publicCreationIndex/{creationId} {
      // Anyone can read
      allow read: if true;

      // Only the author can write/update/delete
      allow create: if isSignedIn() &&
                       isOwner(request.resource.data.authorId);
      allow update, delete: if isSignedIn() &&
                               isOwner(resource.data.authorId);
    }
  }
}
