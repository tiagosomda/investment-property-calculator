rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Properties - authenticated users can CRUD their own, anyone can read shared ones
    match /properties/{projectId} {
      // Allow read if project is shared OR user owns the project
      allow read: if resource.data.isShared == true ||
                     (request.auth != null && request.auth.uid == resource.data.userId);

      // Allow create if authenticated
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow update/delete only if user owns the project
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
