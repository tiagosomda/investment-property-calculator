rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is a collaborator
    function isCollaborator() {
      return request.auth != null &&
             request.auth.token.email in resource.data.get('sharedWith', []);
    }

    // Helper function to check if user is owner
    function isOwner() {
      return request.auth != null && request.auth.uid == resource.data.userId;
    }

    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Properties - authenticated users can CRUD their own, anyone can read shared ones
    match /properties/{projectId} {
      // Allow read if:
      // 1. Project is publicly shared (isShared=true), OR
      // 2. User owns the project, OR
      // 3. User is in the sharedWith list (collaborator)
      allow read: if resource.data.isShared == true ||
                     isOwner() ||
                     isCollaborator();

      // Allow create if authenticated and setting themselves as owner
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.userId;

      // Allow update if:
      // 1. User owns the project, OR
      // 2. User is a collaborator (in sharedWith list)
      // Note: Collaborators can only modify certain fields (not ownership)
      allow update: if isOwner() ||
                       (isCollaborator() &&
                        request.resource.data.userId == resource.data.userId);

      // Allow delete only if user owns the project
      allow delete: if isOwner();
    }
  }
}
